#include <iostream>

using namespace std;
class Celda{
    public:
        Celda(int _x=0, int _y=0){
            x = _x; y = _y;
        }
        int valor, x, y;
        
    public:
        int setValue (int _valor){
            valor = _valor;
        }

        int getValue (){
            return valor;
        }    
        
};


int main()
{
    cout << "Piramide" << endl;
    Celda pyr[6][6];
    for(int y = 0; y < 6; y++)
        for(int x = 0; x <= y; x++ )
            pyr[x][y] = Celda(x,y);

    return 0;
}
